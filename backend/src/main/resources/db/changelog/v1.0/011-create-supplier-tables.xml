<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Suppliers -->
    <changeSet id="011-001-create-suppliers" author="claude">
        <createTable tableName="suppliers">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="registration_code" type="VARCHAR(50)"/>
            <column name="vat_code" type="VARCHAR(50)"/>
            <column name="contact_person" type="VARCHAR(100)"/>
            <column name="phone" type="VARCHAR(50)"/>
            <column name="email" type="VARCHAR(100)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(100)"/>
            <column name="postal_code" type="VARCHAR(20)"/>
            <column name="country" type="VARCHAR(100)"/>
            <column name="payment_term_days" type="INTEGER"/>
            <column name="notes" type="TEXT"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="suppliers" indexName="idx_supplier_code">
            <column name="code"/>
        </createIndex>
        <createIndex tableName="suppliers" indexName="idx_supplier_name">
            <column name="name"/>
        </createIndex>
        <createIndex tableName="suppliers" indexName="idx_supplier_active">
            <column name="is_active"/>
        </createIndex>
    </changeSet>

    <!-- Add display_order to product_categories -->
    <changeSet id="011-002-add-category-display-order" author="claude">
        <addColumn tableName="product_categories">
            <column name="display_order" type="INTEGER"/>
        </addColumn>
    </changeSet>

    <!-- Modify products.sku to be nullable (not all products may have SKU) -->
    <changeSet id="011-003-make-product-sku-nullable" author="claude">
        <dropNotNullConstraint tableName="products" columnName="sku" columnDataType="VARCHAR(100)"/>
    </changeSet>

</databaseChangeLog>
