<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="010-create-manufacturers-table" author="elektromeistras">
        <createTable tableName="manufacturers">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="website" type="VARCHAR(500)"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(100)"/>
            <column name="updated_by" type="VARCHAR(100)"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0"/>
        </createTable>
    </changeSet>

    <changeSet id="011-create-categories-table" author="elektromeistras">
        <createTable tableName="categories">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="parent_id" type="UUID">
                <constraints foreignKeyName="fk_category_parent" references="categories(id)"/>
            </column>
            <column name="display_order" type="INTEGER"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(100)"/>
            <column name="updated_by" type="VARCHAR(100)"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0"/>
        </createTable>
    </changeSet>

    <changeSet id="012-create-products-table" author="elektromeistras">
        <createTable tableName="products">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sku" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="ean" type="VARCHAR(13)"/>
            <column name="name" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="category_id" type="UUID">
                <constraints foreignKeyName="fk_product_category" references="categories(id)"/>
            </column>
            <column name="manufacturer_id" type="UUID">
                <constraints foreignKeyName="fk_product_manufacturer" references="manufacturers(id)"/>
            </column>
            <column name="unit_of_measure" type="VARCHAR(10)"/>
            <column name="base_price" type="DECIMAL(12,2)"/>
            <column name="is_cable" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="is_modular" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="module_width" type="INTEGER"/>
            <column name="attributes" type="JSONB"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="tax_rate" type="DECIMAL(5,2)" defaultValueNumeric="21.00"/>
            <column name="image_url" type="VARCHAR(500)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(100)"/>
            <column name="updated_by" type="VARCHAR(100)"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
